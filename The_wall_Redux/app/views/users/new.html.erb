<div id="container">
	<h1 class='login_title'>The Wall</h1>
	<div class='register_wrapper'>
		<h1>Register</h1>

		<%= simple_form_for @user do |f|%>
			<%= f.input :name, input_html: {class: 'form-control', placeholder: "Your Name"}, autofocus: true %>
			<%= f.input :email, input_html: {class: 'form-control', placeholder: "Your Email"} %>
			<%= f.input :password, input_html: {class: 'form-control', placeholder: "Your Password"} %>
			<%= f.input :password_confirmation, input_html: {class: 'form-control', placeholder: "Confirm Password"} %>
			<%= f.button :submit, class: 'logout' %>
		<% end %>

		<div class='errors'>
			<% if flash[:errors] %>
				<% flash[:errors].each do |error| %>
					<p> <%= error %> </p> 
				<% end %>
			<% end %>
		</div>

		<a href="/login" class='btn btn-link'>Login</a>
	</div>
</div>