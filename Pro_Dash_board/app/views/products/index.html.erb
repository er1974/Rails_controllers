<div id="wrapper">
	<h3 class="text-primary">Listing products</h3>
	<table class="table table-striped">
		<thead>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Category</th>
			<th></th>
		</thead>
		<tbody>
		<!-- you can also access attributes like this: product[:name] -->
		<% @products.each do |product| %>
			<tr>
				<td><%= product.name %></td>
				<td><%= product.description %></td>
				<td><%= product.pricing %></td>
				<td><%= product.category.name %></td>
				<td><a href="/products/<%= product.id %>">Show</a></td>
				<td><a href="/products/<%= product.id %>/edit" class="left_bordered">Edit</a></td>
				<td><a href="/products/<%= product.id %>" data-method="delete" class="left_bordered">Delete</a></td>
				
			</tr>
		<% end %>
		</tbody>
	</table>
	<a href="/products/new">New Product</a>
</div>
